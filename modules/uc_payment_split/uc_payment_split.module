/**
 * Implements hook_uc_order_can_delete().
 */
function uc_payment_split_uc_order_can_delete(OrderInterface $order) {
  if (uc_payment_split_load_payments($order->id())) {
    return FALSE;
  }
}

/**
 * Implements hook_uc_order_delete().
 */
function uc_payment_split_uc_order_delete(OrderInterface $order) {
  $result = \Drupal::entityQuery('uc_payment_split_receipt')
    ->condition('order_id', $order->id())
    ->execute();

  if (!empty($result)) {
    $storage = \Drupal::entityTypeManager()->getStorage('uc_payment_split_receipt');
    $entities = $storage->loadMultiple(array_keys($result));
    $storage->delete($entities);
  }

  // Call each payment method to delete method-specific data from the database.
  foreach (uc_payment_split_method_list() as $id => $method) {
    \Drupal::service('plugin.manager.uc_payment_split.method')->createInstance($id)->orderDelete($order);
  }
}

/**
 * Deletes a payment from the database.
 *
 * @param string $receipt_id
 *   A PaymentReceipt entity id.
 */
function uc_payment_split_delete($receipt_id) {
  if (!is_numeric($receipt_id)) {
    return FALSE;
  }
  /** @var \Drupal\uc_payment_split\PaymentReceiptInterface $payment */
  $payment = PaymentReceipt::load($receipt_id);
  $payment->delete();
}

/**
 * Returns the balance of payments on an order.
 *
 * @param \Drupal\uc_order\OrderInterface $order
 *   An order entity.
 */
function uc_payment_split_balance(OrderInterface $order) {
  $total = $order->getTotal();
  $payments = uc_payment_split_load_payments($order->id());

  if ($payments === FALSE) {
    return $total;
  }

  foreach ($payments as $payment) {
    $total -= $payment->getAmount();
  }

  return $total;
}

/**
 * Loads an array of all the payments for an order.
 *
 * @param int $order_id
 *   The order's id.
 *
 * @return \Drupal\uc_payment_split\PaymentReceiptInterface[]
 *   Array of PaymentReceipt entities.
 */
function uc_payment_split_load_payments($order_id) {
  $result = \Drupal::entityQuery('uc_payment_split_receipt')
    ->condition('order_id', $order_id)
    ->sort('receipt_id')
    ->execute();

  if (!empty($result)) {
    $storage = \Drupal::entityTypeManager()->getStorage('uc_payment_split_receipt');
    return $storage->loadMultiple(array_keys($result));
  }

  return [];
}

/**
 * Returns a list of available payment methods plugins.
 *
 * @return array
 *   An array of payment method definitions, keyed by method ID.
 */
function uc_payment_split_method_list() {
  return \Drupal::service('plugin.manager.uc_payment_split.method')->getDefinitions();
}
