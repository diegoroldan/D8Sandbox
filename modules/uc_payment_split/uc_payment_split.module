/**
 * Implements hook_uc_order_load().
 */
function uc_payment_split_uc_order_load($orders) {
  foreach ($orders as $order) {
    if ($order->getPaymentMethodId()) {
      \Drupal::service('plugin.manager.uc_payment_split.method')->createFromOrder($order)->orderLoad($order);
    }
  }
}

